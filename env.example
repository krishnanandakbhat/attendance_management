# Environment Variables Example
# Copy this file to .env and fill in the values

# Security
SECRET_KEY=your-secret-key-here  # Generate with: openssl rand -hex 32
AGE_ENCRYPTION_KEY=your-encryption-key-here  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
BCRYPT_ROUNDS=12

# Database
SQLITE_URL=sqlite:///./attendance.db

# Network Security
ALLOWED_HOSTS=127.0.0.1,localhost
ALLOWED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Session Management
MAX_DEVICES_PER_USER=2
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
SESSION_CLEANUP_MINUTES=1440  # 24 hours